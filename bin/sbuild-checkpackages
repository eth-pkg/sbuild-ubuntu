use strict;
use warnings;

our $mode = undef;

package Options;

use Sbuild::OptionsBase;
use Sbuild::Conf;

BEGIN {
    use Exporter ();
    our (@ISA, @EXPORT);

    @ISA = qw(Exporter Sbuild::OptionsBase);

    @EXPORT = qw();
}

sub set_options {
    my $self = shift;

    $self->add_options(
	"l|list" => sub { $mode = "list"; },
	"s|set" => sub { $mode = "set"; });
}

package main;

use locale;
use POSIX qw(locale_h);
use Getopt::Long;
use Sbuild qw(help_text version_text usage_error check_packages);
use Sbuild::Conf;
use Sbuild::Utility qw(setup cleanup shutdown);

use Sbuild::Conf;

my $conf = Sbuild::Conf->new();
exit 1 if !defined($conf);
my $options = Options->new($conf, "sbuild-checkpackages", "1");
exit 1 if !defined($options);
$conf->check_group_membership();

usage_error("sbuild-checkpackages", "--list or --set must be specified")
    if (!defined($mode));

usage_error("sbuild-checkpackages", "A chroot must be specified")
    if (@ARGV != 1);

my $chroot = $ARGV[0];

setlocale(LC_COLLATE, "POSIX");
$ENV{'LC_COLLATE'} = "POSIX";

my $session = setup($chroot, $conf) or die "Chroot setup failed";

check_packages($session, $mode);

cleanup($conf);
exit 0;
