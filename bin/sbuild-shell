use strict;
use warnings;
use Sbuild::Utility qw(setup cleanup);

package main;

sub usage {
    print STDERR "Usage: $0 <chroot>\n";
    exit 1;
}

usage() if (@ARGV != 1);

!setup($ARGV[0]) or die "Chroot setup failed";

my $status = run_command("/bin/sh", $Sbuild::Conf::username, 1);

cleanup();
exit $status;
