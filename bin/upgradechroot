use strict;
use warnings;
use Sbuild::Utility qw(setup cleanup);

package main;

sub usage {
	print STDERR "Usage: $0 <chroot> [<chroot> ...]\n";
	exit 1;
}

usage() if (@ARGV < 1);

$Sbuild::Conf::cwd = "/";

foreach (@ARGV) {

	my $chroot = Sbuild::Utility::get_dist($_);

	!setup($_) or die "Chroot setup failed for $chroot chroot";

	print STDOUT "Upgrading $chroot chroot...\n";
	my $status = run_apt_command($Sbuild::Conf::apt_get, "-uy upgrade",
				     "root", 1);

	cleanup();

	exit $status if ($status);
}

exit 0;
